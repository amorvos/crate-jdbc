#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"
PATH=$DIR/.venv/bin:$PATH
if test "$1" == "dev"; then
    sphinx-autobuild -W $DIR $DIR/out/html
else
    declare -i RESULT=0
    printf "\033[1mCleaning output folder ...\033[0m\n"
    rm -rf $DIR/out/
    RESULT+=$?
    printf "\033[1;44mBuilding server docs (html) ...\033[0m\n"
    sphinx-build -n -W -b html -E $DIR $DIR/out/html
    RESULT+=$?
    printf "\033[1;44mBuilding server docs (text) ...\033[0m\n"
    sphinx-build -b text -E $DIR $DIR/out/text
    RESULT+=$?
    exit $RESULT
fi
